{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "target": "ES2020",
    "noEmit": true,
    "resolveJsonModule": true,
    "paths": {
      "@tankswap/uikit": ["../../packages/uikit/src/index.ts"],
      "@tankswap/uikit/*": ["../../packages/uikit/src/*"]
    }
  }
}
