{
  "extends": "@tankswap/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "target": "ES2020",
    "types": ["vitest/globals"],
    "paths": {
      "*": ["./src/*"],
      "@tankswap/uikit": ["../../packages/uikit/src/index.ts"],
      "@tankswap/uikit/*": ["../../packages/uikit/src/*"]
    },
    "skipLibCheck": true
  },
  "exclude": ["**/node_modules", "**/.*/", "**/config/abi/types/", "**/abis/types/*.ts"],
  "include": ["next-env.d.ts", "_next-typesafe-url_.d.ts", "./src/**/*.ts", "./src/**/*.tsx"]
}
